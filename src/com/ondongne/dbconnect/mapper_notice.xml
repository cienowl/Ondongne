<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="notice">

	<insert id="insertNotice" parameterType="com.ondongne.dto.NoticeBean">
		insert into notice(title, content, postdate)
		values(#{title}, #{content}, now())
	</insert>
	
	<select id="selectNoticeAll" resultType="com.ondongne.dto.NoticeBean">
		select * from notice
	</select>

</mapper>

